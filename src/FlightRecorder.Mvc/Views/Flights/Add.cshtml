@model FlightRecorder.Mvc.Models.AddFlightViewModel

@{
    ViewData["Title"] = "Add Flight";
}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md">
                <span style="font-size: 1.2rem"><strong>Add Flight</strong></span>
            </div>
        </div>
        <hr />

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="row">
                <div class="col-md">
                    <span>@Html.Raw(Model.Message)</span>
                </div>
            </div>
            <br />
        }

        @await Html.PartialAsync("Flight", Model);
        <br />

        <div class="row">
            <div class="col-md">
                <div class="input-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    }
</div>
