@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="max-w-md w-full p-8 bg-white shadow-xl rounded-2xl text-center">
        <h1 class="text-4xl font-bold text-red-600 mb-4">Oops!</h1>
        <p class="text-gray-700 text-lg mb-6">Something went wrong. We're sorry for the inconvenience.</p>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-50 text-red-700 p-4 rounded mb-6">
                <strong>Error Details:</strong>
                <pre class="mt-2 whitespace-pre-wrap text-sm">@Model.ErrorMessage</pre>
            </div>
        }

        <a href="/" class="inline-block bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded-full transition">Go Home</a>
    </div>
</div>
