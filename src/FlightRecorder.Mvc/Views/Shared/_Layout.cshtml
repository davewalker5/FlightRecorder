<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Flight Recorder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/datatables.min.css" />
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
</head>
<body>
    <div style="width: 90%; margin: 0 auto;">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Flight Recorder</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav">
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Log Sighting</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Sighting Search
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-area="" asp-controller="SearchSightingsByRoute" asp-action="Index">Sightings By Route</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="SearchSightingsByFlight" asp-action="Index">Sightings By Flight</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="SearchSightingsByAirline" asp-action="Index">Sightings By Airline</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="SearchSightingsByAircraft" asp-action="Index">Sightings By Aircraft</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="SearchSightingsByDate" asp-action="Index">Sightings By Date</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Reports
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-area="" asp-controller="SightingStatistics" asp-action="Index">Sighting Statistics</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="AirlineStatistics" asp-action="Index">Airline Statistics</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="FlightsByMonth" asp-action="Index">Flights By Month</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="LocationStatistics" asp-action="Index">Location Statistics</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="ManufacturerStatistics" asp-action="Index">Manufacturer Statistics</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="ModelStatistics" asp-action="Index">Aircraft Model Statistics</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="MyFlights" asp-action="Index">My Flights</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="JobStatus" asp-action="Index">Job Status</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Data Maintenance
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-area="" asp-controller="Manufacturers" asp-action="Index">Manufacturers</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Models" asp-action="Index">Models</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Aircraft" asp-action="Index">Aircraft</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-area="" asp-controller="Airlines" asp-action="Index">Airlines</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Flights" asp-action="Index">Flights</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-area="" asp-controller="Countries" asp-action="Index">Countries</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Airports" asp-action="Index">Airports</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-area="" asp-controller="Locations" asp-action="Index">Locations</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-area="" asp-controller="CacheManagement" asp-action="Index">Cached Data</a>
                                    </div>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Export
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-area="" asp-controller="Export" asp-action="Sightings">Sightings</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Export" asp-action="Airports">Airports</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Export" asp-action="Reports">Reports</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="LogOut">Log Out</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Log In</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
                @await Html.PartialAsync("_AjaxModalDialog")
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                Flight Recorder @ViewData["Version"] &copy; 2020, 2021, 2022, 2023, 2024, 2025 - David Walker
            </div>
        </footer>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/datatables.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
